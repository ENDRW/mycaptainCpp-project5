#include <iostream>
using namespace std;
 
int main()
{
    int time = 0;
    int hour = 0;
    int min = 0;
    int sec = 0;
 
    
    cout << "Enter time:\n";
    cout <<"Hours?";
    cin >> hour;
    cout <<"Minutes?";
    cin >> min;
    cout <<"Seconds?";
    cin >> sec;
 
    cout<<"The time is="<<hour<<":"<<min<<":"<<sec<<"\n";
    time=(hour*60*60)+(min*60)+sec;
 
    cout<<"Time in total seconds:"<<time;
 
    return 0;
}
